{% extends "base.html" %}

{% block content %}
<style>
	.div_edit {
		padding : 5px;
		background-color : #fff;
		border-color : #eee;
	}

	.div_example {
		padding : 5px;
		background-color : #fff;
		border-color : #eee;
	}

	#distribute {
		background-color : #fff;
	}

	.float {
		list-style-type:none;
	}

	.return {
		float : right;
	}

	.form_unit {
		padding : 5px;
	}

	.btn_insert_code {
		float : left;
		display : inline;
	}

	.btn-default {
		float : right;
		margin-top : 5px;
		margin-right : 5px;
		margin-bottom : 5px;
	}

	.btn-primary {
		float : right;
		margin-top : 5px;
		margin-right : 5px;
		margin-bottom : 5px;
	}

	.btn-warning {
		margin-top : 5px;
		margin-left : 5px;
		margin-bottom : 5px;
	}

</style>
<div class="col-md-12">
	<div class="div_read">
		<div class="panel panel-default" id="distribute">
			<div class="panel-title">&nbsp;{{ distribute.title }}{% if user.is_authenticated %}<a href="{{ distribute.delete }}" style="float:right;padding-right:5px;"><small>删除</small></a>{% endif %}</div>
			<div class="panel-body">
				{% autoescape off %}
				{{ distribute.content }}
				{% endautoescape %}
				<a class="return" href="../../">返回</a>
			</div>
		</div>

	</div>
	<div class="div_edit panel panel-default">
		<form action="" method="post">
			{% csrf_token %}
			<div class="form_unit">
				{{ form.content }}
			</div>
			<button type="submit" class="btn btn-warning" name="submit" value="code">代码</button>
			<button type="submit" class="btn btn-primary" name="submit" value="distribute">发布</button>
			<a href="/" class="btn btn-default">返回</a>
		</form>
	</div>
	<div class="div_example panel panel-default">
		{% for e in exp %}
		<p>{{ e }}</p>
		{% endfor %}
	</div>
</div>
{% endblock %}
